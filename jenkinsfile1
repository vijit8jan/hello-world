pipeline {
    agent any
    environment {
        // Define environment variables
        //AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')
       // AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
        SSH_KEY = credentials('ssh_key')
        EC2_IP = '54.146.58.195'
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from Git repository
                git branch: 'main', url: 'https://github.com/vijit8jan/hello-world.git'
            }
        }
       stage('Test') {
            steps {
                script {
                    // Running tests
                    sh '''
                    pwd
                    cd /home/ec2-user/hello-world
                    git clone https://github.com/vijit8jan/hello-world.git
                    pytest main.py
                    exit
                    EOF
                    '''
                }
            }
        } 
       stage('Build Docker Image') {
            steps {
                script {
                    sh '''
                    cd /home/ec2-user/hello-world
                    docker build -t pythonapp .
                    exit
                    EOF
                    '''
                }
            }
        }
      stage('Deploy') {
            steps {
                script {
                    sh '''
                    cd /home/ec2-user/hello-world
                    docker run --name pythoncontainer -d -p 9000:80 pythonapp
                    echo 'Application deployed successfully!'
                    exit
                    EOF
                    '''
                }
            }
        }
    }
}
